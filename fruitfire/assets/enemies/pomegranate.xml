<body>
    <name>Pomegranate</name>
    <type>
        <i>explosive</i>
    </type>

    <size>12</size>
    <health>20</health>
    <colors>
        <i>59</i>
        <i>60</i>
    </colors>
    <location x="0" y="208"/>

    <textures>
        <texture name="walk">
            <location x="0" y="0" w="24" h="24"/>
        </texture>
        <texture name="eyes" crop="true">
            <location x="24" y="0" w="16" h="8"/>
        </texture>
        <texture name="eyes-furrow" crop="true">
            <location x="24" y="8" w="16" h="8"/>
        </texture>
        <texture name="eyes-bulge" crop="true">
            <location x="24" y="16" w="8" h="8"/>
        </texture>
        <texture name="shadow" crop="true">
            <location x="40" y="0" w="24" h="8"/>
        </texture>
    </textures>

    <components>
        <component id="shadow">
            <texture>shadow</texture>
            <opacity>0.5</opacity>
            <offset x="0" y="11"/>
        </component>
        <component id="body" body="true">
            <texture>walk</texture>
            <type>outlined</type>
        </component>
        <component id="eyes">
            <texture>eyes</texture>
        </component>
    </components>

    <animations>
        <animation name="walking" loop="true">
            <keyframes>
                <keyframe wait="0.2">
                    <start>
                        <set>
                            <prop>~eyes.texture</prop>
                            <value><json>"eyes"</json></value>
                        </set>
                    </start>
                </keyframe>
                <keyframe wait="0.2">
                    <start>
                        <set>
                            <prop>~eyes.texture</prop>
                            <value><json>"eyes-furrow"</json></value>
                        </set>
                    </start>
                </keyframe>
            </keyframes>
        </animation>
        <animation name="fuse" loop="true">
            <keyframes>
                <keyframe wait="0.1">
                    <start>
                        <set>
                            <prop>~body.type</prop>
                            <value><json>"white + outlined"</json></value>
                        </set>
                    </start>
                </keyframe>
                <keyframe wait="0.1">
                    <start>
                        <set>
                            <prop>~body.type</prop>
                            <value><json>"outlined"</json></value>
                        </set>
                    </start>
                </keyframe>
            </keyframes>
        </animation>
    </animations>

    <states initial="attacking">
        <state name="attacking">
            <start>
                <set>
                    <prop>animation</prop>
                    <value><json>"walking"</json></value>
                </set>
            </start>
            <continual>
                <call>
                    <func>gazeAt</func>
                    <args>
                        <get>engine.playerEntity.pos</get>
                        <json>0.9</json>
                    </args>
                </call>
                <call>
                    <func>knockInDir</func>
                    <args>
                        <json>0.0025</json>
                    </args>
                </call>
                <set>
                    <prop>animation</prop>
                    <value><json>"walking"</json></value>
                </set>
                <call>
                    <func>~eyes.offset.set</func>
                    <args>
                        <call>
                            <func>getLookingOffset</func>
                            <args></args>
                        </call>
                    </args>
                </call>
                <call>
                    <func>~eyes.offset.iadd</func>
                    <args>
                        <json>[0, 6]</json>
                    </args>
                </call>
                <if>
                    <cond><op>
                        <left><call>
                            <func>pos.dist</func>
                            <args>
                                <get>engine.playerEntity.pos</get>
                            </args>
                        </call></left>
                        <op>lt</op>
                        <right><json>32</json></right>
                    </op></cond>
                    <true>
                        <set>
                            <prop>immortal</prop>
                            <value><json>true</json></value>
                        </set>
                        <set>
                            <prop>state</prop>
                            <value><json>"fuse"</json></value>
                        </set>
                    </true>
                </if>
            </continual>
        </state>
        <state name="fuse">
            <start>
                <set>
                    <prop>health</prop>
                    <value><json>0</json></value>
                </set>
                <set>
                    <prop>fuseTimer</prop>
                    <value><json>1</json></value>
                </set>
                <set>
                    <prop>animation</prop>
                    <value><json>"fuse"</json></value>
                </set>
                <set>
                    <prop>~eyes.texture</prop>
                    <value><json>"eyes-bulge"</json></value>
                </set>
                <set>
                    <prop>~eyes.offset.y</prop>
                    <value><json>4</json></value>
                </set>
                <set>
                    <prop>invincible</prop>
                    <value><json>true</json></value>
                </set>
            </start>
            <stop>
                <set>
                    <prop>immortal</prop>
                    <value><json>false</json></value>
                </set>
            </stop>
            <continual>
                <set>
                    <prop>fuseTimer</prop>
                    <value><op>
                        <left><get>fuseTimer</get></left>
                        <op>-</op>
                        <right><get>env.delta</get></right>
                    </op></value>
                </set>
                <if>
                    <cond><op>
                        <left><get>fuseTimer</get></left>
                        <op>lt</op>
                        <right><json>0</json></right>
                    </op></cond>
                    <true>
                        <set>
                            <prop>state</prop>
                            <value><json>"explode"</json></value>
                        </set>
                    </true>
                </if>
            </continual>
        </state>
        <state name="explode">
            <start>
                <call>
                    <func>engine.cameraEntity.addShakeFrom</func>
                    <args>
                        <get>pos</get>
                        <json>5</json>
                    </args>
                </call>
                <call>
                    <func>engine.rootEntity.addEntity</func>
                    <args>
                        <call>
                            <func>createExplosion</func>
                            <args>
                                <json>61</json>
                                <json>3</json>
                                <json>24</json>
                            </args>
                        </call>
                    </args>
                </call>
                <set>
                    <prop>dirOffset</prop>
                    <value><op>
                        <left><json>360</json></left>
                        <op>*</op>
                        <right><call>
                            <func>Math.random</func>
                            <args></args>
                        </call></right>
                    </op></value>
                </set>
                <for>
                    <start><json>0</json></start>
                    <stop><json>36</json></stop>
                    <body>
                        <call>
                            <func>engine.rootEntity.addEntity</func>
                            <args>
                                <call>
                                    <func>createLaunchedProjectile</func>
                                    <args>
                                        <op>
                                            <left><json>"power-"</json></left>
                                            <op>+</op>
                                            <right><call>
                                                <func>util.choose</func>
                                                <args>
                                                    <json>[2, 2, 4]</json>
                                                </args>
                                            </call></right>
                                        </op>
                                        <json>61</json>
                                        <op>
                                            <left><call>
                                                <func>Math.random</func>
                                                <args></args>
                                            </call></left>
                                            <op>map-rg</op>
                                            <right><json>[[0, 1], [1, 5]]</json></right>
                                        </op>
                                        <json>1</json>
                                        <json>null</json>
                                        <op>
                                            <left><get>dirOffset</get></left>
                                            <op>+</op>
                                            <right><op>
                                                <left><json>10</json></left>
                                                <op>*</op>
                                                <right><get>arg:i</get></right>
                                            </op></right>
                                        </op>
                                    </args>
                                </call>
                            </args>
                        </call>
                    </body>
                </for>
            </start>
        </state>
    </states>

    <events>
        <event name="death">
            <set>
                <prop>immortal</prop>
                <value><json>true</json></value>
            </set>
            <set>
                <prop>state</prop>
                <value><json>"fuse"</json></value>
            </set>
        </event>
    </events>
</body>